<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gameapp.android.wizardcounter.GameMenu"
    tools:showIn="@layout/activity_game_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="4">


        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Players"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="10sp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bids"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="0.6" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tricks"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </LinearLayout>


        <TextView
            android:id="@+id/txt1"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:textStyle="bold"/>

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/edt1"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt1"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="45sp"
            android:background="@drawable/edittextstyle" />

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/trick_edt1"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/edt1"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="45sp"
            android:background="@drawable/edittextstyle"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/score_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/trick_edt1"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="45sp"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginTop="30sp"
            android:textStyle="bold"/>

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/edt2"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt2"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:layout_below="@id/edt1"
            android:background="@drawable/edittextstyle"/>

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/trick_edt2"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/trick_edt1"
            android:layout_toRightOf="@id/edt2"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:background="@drawable/edittextstyle"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/score_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_txt1"
            android:layout_toRightOf="@id/trick_edt2"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"/>

    <TextView
            android:id="@+id/txt3"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginTop="30sp"
            android:textStyle="bold"/>

        <EditText
            android:gravity="center"
            android:maxLength="2"
            android:inputType="number"
            android:id="@+id/edt3"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt3"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:layout_below="@id/edt2"
            android:background="@drawable/edittextstyle"/>

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/trick_edt3"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/trick_edt2"
            android:layout_toRightOf="@id/edt3"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:background="@drawable/edittextstyle"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/score_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_txt2"
            android:layout_toRightOf="@id/trick_edt3"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"/>


        <TextView
            android:id="@+id/txt4"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt3"
            android:layout_marginTop="30sp"
            android:textStyle="bold"/>

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:visibility="invisible"
            android:id="@+id/edt4"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt2"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:layout_below="@id/edt3"
            android:background="@drawable/edittextstyle"/>

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:visibility="invisible"
            android:id="@+id/trick_edt4"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/trick_edt3"
            android:layout_toRightOf="@id/edt3"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:background="@drawable/edittextstyle"/>


    <TextView
        android:textColor="#000000"
        android:id="@+id/score_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_txt3"
        android:layout_toRightOf="@id/trick_edt3"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="30sp"
        android:visibility="invisible"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/txt5"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt4"
            android:layout_marginTop="30sp"/>

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:visibility="invisible"
            android:id="@+id/edt5"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt2"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:layout_below="@id/edt4"
            android:background="@drawable/edittextstyle"/>

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:visibility="invisible"
            android:id="@+id/trick_edt5"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/trick_edt4"
            android:layout_toRightOf="@id/edt4"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:background="@drawable/edittextstyle"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/score_txt5"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_txt4"
            android:layout_toRightOf="@id/trick_edt4"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txt6"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt5"
            android:layout_marginTop="30sp"
            android:textStyle="bold"/>

        <EditText
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:visibility="invisible"
            android:id="@+id/edt6"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt2"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:layout_below="@id/edt5"
            android:background="@drawable/edittextstyle"/>

        <EditText
            android:gravity="center"
            android:maxLength="2"
            android:inputType="number"
            android:id="@+id/trick_edt6"
            android:visibility="invisible"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/trick_edt5"
            android:layout_toRightOf="@id/edt5"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:background="@drawable/edittextstyle"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/score_txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_txt5"
            android:layout_toRightOf="@id/trick_edt5"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"
            android:visibility="invisible"/>



   <LinearLayout
        android:id="@+id/buttonsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/calc_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Calculate Round"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/new_round"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Next Round" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="save" />


    </LinearLayout>

    <TextView
        android:id="@+id/Round_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="Round"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@id/buttonsLinearLayout"
        android:layout_marginBottom="80dp"/>

    <TextView
        android:id="@+id/num_round_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Round_txt"
        android:layout_above="@id/buttonsLinearLayout"

        android:textColor="@color/DarkPurple"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/of_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/num_round_txt1"
        android:layout_above="@id/buttonsLinearLayout"
        android:text="of"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/num_round_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/of_txt"
        android:layout_above="@id/buttonsLinearLayout"
        android:text="1"
        android:textColor="@color/DarkPurple"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>
